              <%= f.input :swell_hgt_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, label: 'Height: Max 🌊⬆' %>
              <br>
              <br>
              <%= f.hint 'Greater swell interval = greater wave power.' %> <!-- Swell interval refers to the time between equal points of passing waves -->
              <br>
              <%= f.input :swell_int_min, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, label: 'Interval: Min 🕓 ⬇' %>
              <%= f.input :swell_int_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, label: 'Interval: Max 🕓 ⬆' %>
              <br>
              <br>
              <%= f.hint 'More perpendicular to your coast (with no obstructions) = better wave quality.' %> <!-- Swell direction refers to the trajectory of an incoming swell -->
              <br>
              <%= f.input :swell_dir_min, as: :range, input_html: { min: 0, max: 360, step: 5 }, label: 'Direction: Min 🧭 ⬇' %>
              <%= f.input :swell_dir_max, as: :range, input_html: { min: 0, max: 360, step: 5 }, label: 'Direction: Max 🧭 ⬆' %>
              <br>
