<div class="container">
  <%= simple_form_for @preference do |f| %>
    <%= f.input :name, disabled: true %>
    <%= f.input :pref_unit, as: :radio_buttons, collection: ['FT', 'M'], disabled: true %>
    <%= f.input :swell_hgt_min, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, disabled: true %>
    <%= f.input :swell_hgt_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, disabled: true %>
    <%= f.input :swell_int_min, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, disabled: true %>
    <%= f.input :swell_int_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 }, disabled: true %>
    <%= f.input :swell_dir_min, as: :range, input_html: { min: 0, max: 360, step: 5 }, disabled: true %>
    <%= f.input :swell_dir_max, as: :range, input_html: { min: 0, max: 360, step: 5 }, disabled: true %>
    <%= f.input :wind_str_min, as: :range, input_html: { min: 0, max: 30, step: 0.5 }, disabled: true %>
    <%= f.input :wind_str_max, as: :range, input_html: { min: 0, max: 30, step: 0.5 }, disabled: true %>
    <%= f.input :wind_dir_min, as: :range, input_html: { min: 0, max: 360, step: 5 }, disabled: true %>
    <%= f.input :wind_dir_max, as: :range, input_html: { min: 0, max: 360, step: 5 }, disabled: true %>
    <%= f.input :pref_tide_position, as: :radio_buttons, collection: ['Low', 'Mid', 'High'], disabled: true %>
    <%= f.input :pref_tide_range, as: :range, input_html: { min: 1, max: 12, step: 1 }, disabled: true %>
    <%= f.button :submit, disabled: true %>
  <% end %>
</div>

<%= link_to "Back to preferences", preferences_path %>
