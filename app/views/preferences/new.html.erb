<h1>New Preference Preset</h1>


<div class="container">
  <%= simple_form_for @preference do |f| %>
    <%= f.input :name %>
    <%= f.input :pref_unit, as: :radio_buttons, collection: ['FT', 'M'] %>
    <%= f.input :swell_hgt_min, as: :range, input_html: { min: 0, max: 20, step: 0.5 } %>
    <%= f.input :swell_hgt_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 } %>
    <%= f.input :swell_int_min, as: :range, input_html: { min: 0, max: 20, step: 0.5 } %>
    <%= f.input :swell_int_max, as: :range, input_html: { min: 0, max: 20, step: 0.5 } %>
    <%= f.input :swell_dir_min, as: :range, input_html: { min: 0, max: 360, step: 5 } %>
    <%= f.input :swell_dir_max, as: :range, input_html: { min: 0, max: 360, step: 5 } %>
    <%= f.input :wind_str_min, as: :range, input_html: { min: 0, max: 30, step: 0.5 } %>
    <%= f.input :wind_str_max, as: :range, input_html: { min: 0, max: 30, step: 0.5 } %>
    <%= f.input :wind_dir_min, as: :range, input_html: { min: 0, max: 360, step: 5 } %>
    <%= f.input :wind_dir_max, as: :range, input_html: { min: 0, max: 360, step: 5 } %>
    <%= f.input :pref_tide_position, as: :radio_buttons, collection: ['Low', 'Mid', 'High'] %>
    <%= f.input :pref_tide_range, as: :range, input_html: { min: 1, max: 12, step: 1 } %>
    <%= f.button :submit %>
  <% end %>
</div>
