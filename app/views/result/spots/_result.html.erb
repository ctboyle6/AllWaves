
<% @result.days.each_with_index do |day, index| %>
  <a class="day-link" <%= index.zero? ? "data-controller=day" : "" %> <%= "href=/day?p=#{@result.preference.id}&s=#{@result.spot.id}&d=#{day.date}" %> data-remote=true>
    <div class="day">
      <h2 class="weekday-name"><%= day.date.strftime("%A") %></h2>
      <h3 class="month-name"><%= day.date.strftime("%B %e") %></h3>
      <div class="go-light <%= day.any_go? ? 'on' : 'off' %>"></div>
    </div>
  </a>
<% end %>



