<div class="weekly-schedule">
  <% @result.days.each do |day| %>
    <div class="day">
      <h2><%= day.date.strftime("%A") %></h2>
      <h3><%= day.date.strftime("%B %e") %></h3>
      <a <%= "href=/day?p=#{@result.preference.id}&s=#{@result.spot.id}&d=#{day.date}" %> data-remote=true class="btn btn-<%= day.any_go? ? 'success' : 'danger' %>"></a>
    </div>
  <% end %>
</div>

<div class="bottom-block"></div>
