<h1>All the Spots</h1>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="search-bar d-flex justify-content-center">
  <%= form_with url: spots_path, local: true, html: { class: "form-search justify-content-between align-items-center " } ,method: :get do |form| %>
    <%= form.label :query, "Find your spot:" %>
    <%= form.text_field :query %>
    <%= form.submit "Search", class: "btn btn-primary"%>
  <% end %>
</div>

<% @spots.each do |spot| %>
  <h2>Spot name: <%= spot.name %> </h2>
  <h3><%= spot.id %></h3>
  <ul>
    <li> Longitude: <%= spot.longitude %> </li>
    <li> Latitude: <%= spot.latitude %> </li>
    <li> Surfline_spot: <%= spot.surfline_spot %> </li>
    <li> Subregion_spot: <%= spot.surfline_subregion %> </li>
  </ul>
<% end %>
